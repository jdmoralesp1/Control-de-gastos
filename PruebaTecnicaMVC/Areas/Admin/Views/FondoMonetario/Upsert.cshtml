@model PruebaTecnicaMVC.Modelos.Entities.FondoMonetario

@{
    Layout = "~/Views/Shared/_Layout.cshtml";
    string titulo = Model.Id != 0 ? "Actualizar Fondo Monetario" : "Crear Fondo Monetario";
}

<div class="container py-4">
    <div class="row justify-content-center">
        <div class="col-lg-8 col-md-10">
            <div class="card shadow border-0">
                <div class="card-header bg-primary text-white">
                    <h3 class="mb-0">@titulo</h3>
                </div>
                <div class="card-body">
                    <form method="post" autocomplete="off">
                        <div asp-validation-summary="ModelOnly" class="alert alert-danger" role="alert"></div>

                        @if (Model.Id != 0)
                        {
                            <input type="hidden" asp-for="Id" />
                            <input type="hidden" asp-for="FechaCreacion" />
                            <input type="hidden" asp-for="SaldoActual" />
                            <input type="hidden" asp-for="UsuarioId" />
                        }

                        <div class="mb-3">
                            <label asp-for="Nombre" class="form-label">Nombre</label>
                            <input asp-for="Nombre" class="form-control" placeholder="Ej: Bancolombia, Efectivo, Casa, Cheque, etc." />
                            <span asp-validation-for="Nombre" class="text-danger"></span>
                        </div>
                        <div class="mb-3">
                            <label asp-for="Tipo" class="form-label">Tipo</label>
                            <input asp-for="Tipo" class="form-control" placeholder="Ej: Banco, Caja, Efectivo" />
                            <span asp-validation-for="Tipo" class="text-danger"></span>
                        </div>
                        <div class="mb-3">
                            <label asp-for="NumeroCuenta" class="form-label">Numero de Cuenta (opcional)</label>
                            <input asp-for="NumeroCuenta" class="form-control" placeholder="Numero de cuenta del fondo monetario" />
                            <span asp-validation-for="NumeroCuenta" class="text-danger"></span>
                        </div>

                        <div class="d-flex justify-content-end gap-2 mt-4">
                            @if (Model.Id != 0)
                            {
                                <partial name="_BotonesActualizarYRegresar" model="Model.Id" />
                            }
                            else
                            {
                                <partial name="_BotonesCrearYRegresar" />
                            }
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}

@section Styles {
    <link rel="stylesheet" href="~/css/froms.css" asp-append-version="true" />
}
