@model PruebaTecnicaMVC.Modelos.Entities.Presupuesto

@{
    Layout = "~/Views/Shared/_Layout.cshtml";
    string titulo = Model.Id != 0 ? "Actualizar Presupuesto" : "Crear Presupuesto";
}

<div class="container py-4">
    <div class="row justify-content-center">
        <div class="col-lg-8 col-md-10">
            <div class="card shadow border-0">
                <div class="card-header bg-primary text-white">
                    <h3 class="mb-0">@titulo</h3>
                </div>
                <div class="card-body">
                    <form method="post" autocomplete="off">
                        <div asp-validation-summary="ModelOnly" class="alert alert-danger" role="alert"></div>

                        @if (Model.Id != 0)
                        {
                            <input type="hidden" asp-for="Id" />
                            <input type="hidden" asp-for="UsuarioId" />
                            <input type="hidden" asp-for="FechaCreacion" />
                            <input type="hidden" asp-for="Activo" />
                            <input type="hidden" asp-for="MontoTotal" />
                        }

                        <div class="mb-3">
                            <label asp-for="Anio" class="form-label">Año</label>
                            <input type="number" asp-for="Anio" class="form-control" min="2025" value="2025" />
                            <span asp-validation-for="Anio" class="text-danger"></span>
                        </div>
                        <div class="mb-3">
                            <label asp-for="Mes" class="form-label">Mes</label>
                            <select asp-for="Mes" class="form-control">
                                <option value="1">Enero</option>
                                <option value="2">Febrero</option>
                                <option value="3">Marzo</option>
                                <option value="4">Abril</option>
                                <option value="5">Mayo</option>
                                <option value="6">Junio</option>
                                <option value="7">Julio</option>
                                <option value="8">Agosto</option>
                                <option value="9">Septiembre</option>
                                <option value="10">Octubre</option>
                                <option value="11">Noviembre</option>
                                <option value="12">Diciembre</option>
                            </select>
                            <span asp-validation-for="Mes" class="text-danger"></span>
                        </div>

                        <div class="d-flex justify-content-end gap-2 mt-4">
                            @if (Model.Id != 0)
                            {
                                <partial name="_BotonesActualizarYRegresar" model="Model.Id" />
                            }
                            else
                            {
                                <partial name="_BotonesCrearYRegresar" />
                            }
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}

@section Styles {
    <link rel="stylesheet" href="~/css/froms.css" asp-append-version="true" />
}
